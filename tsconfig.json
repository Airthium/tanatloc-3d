{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@extra/*": ["./src/extra/*"],
      "@index": ["./index.d.ts"],
      "@header": ["./src/header/index.js"],
      "@helpers/*": ["./src/helpers/*"],
      "@loader": ["./src/loader/index.js"],
      "@loader/*": ["./src/loader/*"],
      "@tools/*": ["./src/tools/*"],
      "@store": ["./src/store/index.js"],
      "@store/*": ["./src/store/*"],
      "@style/*": ["./src/style/*"]
    }
  },
  "include": ["./src", "index.d.ts", "types.d.ts"]
}
