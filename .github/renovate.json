{
  "extends": ["config:recommended"],
  "timezone": "Europe/Paris",
  "schedule": ["before 7am on Monday"],
  "baseBranches": ["hotfix"],
  "groupName": "all dependencies",
  "separateMajorMinor": false,
  "groupSlug": "all",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": ["*"]
    }
  ],
  "ignoreDeps": [
    "react",
    "react-dom",
    "@types/react",
    "@types/react-dom",
    "@react-three/drei",
    "@react-three/fiber",
    "@react-three/test-renderer"
  ],
  "lockFileMaintenance": {
    "enabled": false
  }
}
